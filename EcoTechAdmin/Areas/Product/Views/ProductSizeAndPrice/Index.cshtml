@model IEnumerable<BAL.ViewModels.Product.ProductSizeAndPriceViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h1>Product Attributes & Prices</h1>

<p>
    <a asp-action="Create" asp-controller="ProductDesign" asp-area="Product"><customicon type="add" title="Create New Product Design"></customicon></a>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height80)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height84)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height90)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height96)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceVoid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Markup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RetailPriceDisc)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height80)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height84)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height90)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height96)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceVoid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Markup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RetailPriceDisc)
                    </td>
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/product/productattrandprices/edit/@item.ProductAttributeID"><customicon type="edit" title="Edit Product Attributes & Prices"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/product/productattrandprices/details/@item.ProductAttributeID"><customicon type="details" title="Show More Details"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/product/productattrandprices/delete/@item.ProductAttributeID/@item.ProductID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Product Attributes & Prices"></customicon></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a asp-action="Create">Create New Product Design</a>
        </div>
    </div>
}

@section scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
}