@model IEnumerable<BAL.ViewModels.Product.ProductSizeAndPriceViewModel>

@{
    Layout = null;
}

@if(ViewBag.AddNew)
{
    <p>
        <a name="ctlCreateNew" href="javascript:void(0);"><customicon type="add" title="Create New Size And Price"></customicon></a>
        <input type="hidden" id="ctlProductAttributeID" value="@ViewBag.ProductAttributeID" />
    </p>
}
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductHeightName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LandedCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Markup)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SellingPrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductHeightName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LandedCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Markup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellingPrice)
                    </td>
                    <td class="text-center">
                        <a href="javascript:void(0);" onclick="CreateEditProductSizeAndPrice('@item.ProductSizeAndPriceID', 'Edit');"><customicon type="edit" title="Edit Product Size & Price"></customicon></a> |
                        <a href="javascript:void(0);" onclick="DeleteProductSizeAndPrice(@item.ProductSizeAndPriceID);"><customicon type="delete" title="Delete Product Size & Price"></customicon></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a name="ctlCreateNew" href="javascript:void(0);">Add New Size And Price</a>
        </div>
    </div>
}

<script>
    var url = "/js/product/productsizeandprice/index.js";
    $.getScript(url);
</script>