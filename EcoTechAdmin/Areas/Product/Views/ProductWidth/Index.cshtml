@model IEnumerable<BAL.ViewModels.Product.ProductWidthViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h1>Product Widths</h1>

<p>
    <a asp-action="Create" asp-controller="ProductWidth" asp-area="Product"><customicon type="add" title="Create New Product Width"></customicon></a>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductWidthName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductWidthName)
                    </td>
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/product/productWidth/edit/@item.ProductWidthID"><customicon type="edit" title="Edit Product Width"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/product/productWidth/details/@item.ProductWidthID"><customicon type="details" title="Show More Details"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/product/productWidth/delete/@item.ProductWidthID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Product Width"></customicon></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a asp-action="Create">Create New Product Width</a>
        </div>
    </div>
}

@section scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
}