@model IEnumerable<BAL.ViewModels.Product.DoorTypeViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h1>Door Types</h1>

<p>
    <a asp-action="Create" asp-controller="DoorType" asp-area="Product"><img alt="Create New Door Type" title="Create New Door Type" src="~/img/create.png" border="0" style="border:none;" /></a>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DoorTypeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DoorTypeName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoorTypeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoorTypeName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a asp-action="Create">Create New Door Type</a>
        </div>
    </div>
}