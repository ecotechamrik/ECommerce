@model BAL.ViewModels.Product.ProductAttributeViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h1>Product Attribute Details</h1>

<div>
    <a asp-action="Index" asp-route-id="@Model.ProductID"><customicon type="back" title="Back to Product Attribute"></customicon> </a> |
    <a href="@BAL.Common.WEBSITEPATH/product/productattribute/edit/@Model.ProductAttributeID"><customicon type="edit" title="Edit Product Attribute"></customicon></a> |
    <a href="@BAL.Common.WEBSITEPATH/product/productattribute/delete/@Model.ProductAttributeID/@Model.ProductID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Product Attribute"></customicon></a> |
    <a asp-action="Create" asp-controller="ProductAttribute" asp-route-id="@Model.ProductID" asp-area="Product"><customicon type="add" title="Create New Product Attribute"></customicon></a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DoorTypeName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DoorTypeName)
        </dd>
    </dl>
    <hr />
    <p class="mix">
        Product Price & Size Details
    </p>

    <div style="padding-bottom:15px;" class="text-danger font-weight-bold">
        <div id="successMessage"></div>
    </div>

    <div id="divProductPriceAndSize"></div>

    <div id="loading-image" class="text-center">
        <img src="~/img/loader.gif" />
    </div>

</div>

@section scripts {
    <script src="~/js/product/productattribute/details.js" asp-append-version="true"></script>
}