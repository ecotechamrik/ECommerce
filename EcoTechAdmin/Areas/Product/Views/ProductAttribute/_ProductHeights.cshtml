@model IEnumerable<BAL.ViewModels.Product.ProductSizeAndPriceViewModel>

@{
    Layout = null;
}

@if (Model.Count() > 0)
{

    @foreach (var item in Model)
    {
        <div class="row text-center">
            <div class="col-md-1">
                <div class="form-group">
                    <input type="hidden" id="@String.Concat("hdnLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName)" />
                    <label asp-for="@item.ProductHeightName" class="control-label font-weight-bold"></label>
                    <input asp-for="@item.ProductHeightName" class="form-control" style="background-color:#969696;color:#FFF" />
                    <span asp-validation-for="@item.ProductHeightName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="@item.ProductCode" class="control-label font-weight-bold"></label>
                    <input asp-for="@item.ProductCode" readonly class="form-control" name="ctlProductCode_@Model.First().ThicknessWidth" id="ctlProductCode_@Model.First().ThicknessWidth&@item.ProductHeightName" />
                    <span asp-validation-for="@item.ProductCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="@item.PriceDate" class="control-label font-weight-bold"></label>
                    <input asp-for="@item.PriceDate" class="form-control" />
                    <span asp-validation-for="@item.PriceDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="@item.InvDate" class="control-label font-weight-bold"></label>
                    <input id="ctlInvDate" asp-for="@item.InvDate" class="form-control" />
                    <span asp-validation-for="@item.InvDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="@item.Markup" class="control-label font-weight-bold"></label>
                    <input id="@String.Concat("ctlMarkup_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName)" onkeyup="CalculatePrice(@String.Concat("hdnLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName));" asp-for="@item.Markup" class="form-control" />
                    <span asp-validation-for="@item.Markup" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="@item.RetailPriceDisc" class="control-label font-weight-bold"></label>
                    <input id="@String.Concat("ctlRetailDisc_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName)" asp-for="@item.RetailPriceDisc" onkeyup="CalculatePrice(@String.Concat("hdnLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName));" class="form-control" />
                    <span asp-validation-for="@item.RetailPriceDisc" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="@item.SellingPrice" class="control-label font-weight-bold"></label>
                    <input id="@String.Concat("ctlSellingPrice_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName)" asp-for="@item.SellingPrice" class="form-control" />
                    <span asp-validation-for="@item.SellingPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label asp-for="@item.PriceVoid" class="control-label font-weight-bold"></label>
                    <input asp-for="@item.PriceVoid" class="form-control" />
                    <span asp-validation-for="@item.PriceVoid" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-1"></div>
            <div class="col-md-11">
                @{
                    for (int count = 0; count < @Model.First().SupplierList.Count(); count++)
                    {
                        <div class="row backcolor">
                            <div class="col-md-2 valign">
                                <div class="form-group">
                                    <label class="control-control font-weight-bold">@Model.First().SupplierList[count].SupplierName</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    @if (@count == 0)
                                    {<label asp-for="@Model.First().InboundCostDisplay" class="control-label font-weight-bold"></label>}
                                    <input asp-for="@Model.First().InboundCost" value="@Model.First().SupplierList[count].InboundCost" class="form-control" id="@String.Concat("ctlInboundCost_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" onkeyup="CalculateSellingPrice(@String.Concat("rdoLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID));" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @if (@count == 0)
                                    {<label asp-for="@Model.First().TransportationCostDisplay" class="control-label font-weight-bold"></label>}
                                    <input asp-for="@Model.First().TransportationCost" value="@Model.First().SupplierList[count].TransportationCost" class="form-control" id="@String.Concat("ctlTransportationCost_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" onkeyup="CalculateSellingPrice(@String.Concat("rdoLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID));" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @if (@count == 0)
                                    {<label asp-for="@Model.First().LandedCostDisplay" class="control-label font-weight-bold"></label>}
                                    <input asp-for="@Model.First().LandedCost" value="@Model.First().SupplierList[count].LandedCost" class="form-control" id="@String.Concat("ctlLandedCost_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" onkeyup="CalculateSellingPrice(@String.Concat("rdoLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID));" />
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    @if (@count == 0)
                                    {<label asp-for="@Model.First().Options" class="control-label font-weight-bold"></label>}
                                    @if (@Model.First().SupplierList[count].SupplierID == @Model.First().SupplierList.First().SupplierID)
                                    {
                                        <input id="@String.Concat("chkLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" value="@Model.First().SupplierList[count].SupplierID" type="checkbox" class="form-control" checked="checked" />
                                    }
                                    else
                                    {
                                        <input id="@String.Concat("chkLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" value="@Model.First().SupplierList[count].SupplierID" type="checkbox" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    @if (@count == 0)
                                    {<label asp-for="@Model.First().Live" class="control-label font-weight-bold"></label>}
                                    @if (@Model.First().SupplierList[count].SupplierID == @Model.First().SupplierList.First().SupplierID)
                                    {
                                        <input name="@Model.First().ThicknessWidth&@item.ProductHeightID" onclick="CalculateSellingPrice(this.id);" id="@String.Concat("rdoLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" value="@Model.First().SupplierList[count].SupplierID" type="radio" class="form-control" checked="checked" />
                                        <script>
                                            $(@String.Concat("hdnLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName)).val(@Model.First().SupplierList[count].SupplierID);
                                            CalculateSellingPrice('@String.Concat("rdoLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)');
                                        </script>

                                    }
                                    else
                                    {
                                        <input name="@Model.First().ThicknessWidth&@item.ProductHeightID" onclick="CalculateSellingPrice(this.id);" id="@String.Concat("rdoLiveSupplier_", @Model.First().ThicknessWidth, "_", @item.ProductHeightName, "_", @Model.First().SupplierList[count].SupplierID)" value="@Model.First().SupplierList[count].SupplierID" type="radio" class="form-control" />
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <hr />
    }
}