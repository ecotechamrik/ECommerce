@model BAL.ViewModels.Product.ProductAttributeViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h1>Product Attribute Details</h1>

<div>
    <a asp-action="Index" asp-route-id="@Model.ProductID"><customicon type="back" title="Back to Product Attribute"></customicon> </a>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- #region [ Hidden Fields ]-->
            <div class="form-group">
                <input type="hidden" id="ctlProductAttributeID" asp-for="ProductAttributeID" />
                <input type="hidden" id="hdnProductID" asp-for="ProductID" />
            </div>
            <!-- #endregion [ Hidden Fields ]-->

            <div class="row">
                <div class="col-md-6">
                    <!-- #region [ DoorType Section ]-->
                    @if (Model.DoorTypeList != null)
                    {
                        <div class="form-group">
                            <label asp-for="DoorTypeName" class="control-label font-weight-bold"></label>
                            <select id="dllDoorTypes" class="form-control" asp-for="DoorTypeID" asp-items="@(new SelectList(Model.DoorTypeList, "DoorTypeID","DoorTypeName"))">
                                <option value="">--Select--</option>
                            </select>
                            <span asp-validation-for="DoorTypeID" class="text-danger"></span>
                        </div>
                    }
                    <!-- #endregion [ Door Type Section ]-->
                </div>
                <div class="col-md-6">
                    <!-- #region [ Currency Section ]-->
                    @if (Model.CurrencyList != null)
                    {

                        <div class="form-group">
                            <label asp-for="CurrencyName" class="control-label font-weight-bold"></label>
                            <select id="dllCurrencies" class="form-control" asp-for="CurrencyID" asp-items="@(new SelectList(Model.CurrencyList, "CurrencyID","CurrencyName"))">
                                <option value="">--Select--</option>
                            </select>
                            <span asp-validation-for="CurrencyID" class="text-danger"></span>
                        </div>
                    }
                    <!-- #endregion [ Currency Section ]-->
                </div>
            </div>

            <div class="@ViewBag.ShowSupplierThickness">
                <!-- #region [ Product Thickness Section ] -->
                @if (Model.ProductThicknessList != null)
                {
                    <label class="control-label font-weight-bold">Select Product Thickness:</label>
                    <div class="bordersection">
                        <div class="row backcolor">
                            @{
                                for (int count = 0; count < Model.ProductThicknessList.Count(); count++)
                                {
                                    <div class="col-md-2">
                                        @if (@Model.ProductThicknessList[count].ProductAttributeThicknessID != 0)
                                        {
                                            <script>countNo=@count</script>
                                            <!-- SET COUNT VALUE IN EDIT MODE -->
                                            <input asp-for="ProductThicknessName" id="rdbProductThickness_@count" value="@Model.ProductThicknessList[count].ProductThicknessID" onclick="GetThicknessSizeDetails(this, @Model.ProductThicknessList[count].ProductThicknessID, @Model.ProductThicknessList[count].ProductAttributeThicknessID, this.checked, @Model.ProductThicknessList[count].ProductThicknessName);" type="checkbox" class="form-check-input" checked="checked" />
                                        }
                                        else
                                        {
                                            <input asp-for="ProductThicknessName" id="rdbProductThickness_@count" value="@Model.ProductThicknessList[count].ProductThicknessID" onclick="GetThicknessSizeDetails(this, @Model.ProductThicknessList[count].ProductThicknessID, @Model.ProductThicknessList[count].ProductAttributeThicknessID, this.checked, @Model.ProductThicknessList[count].ProductThicknessName);" type="checkbox" class="form-check-input" />
                                        }
                                        <label class="form-check-label">@Model.ProductThicknessList[count].ProductThicknessName</label>
                                        <span asp-validation-for="ProductThicknessName" class="text-danger"></span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
                <!-- #endregion [ Product Thickness Section ] -->
                <!-- #region [ Product Attribute Thickness Detail Section ] -->
                @if (Model.ProductThicknessList != null)
                {
                    <div class="row">
                        <div class="col-md-12 ThicknessSizes">
                            @{
                                for (int count = 0; count < Model.ProductThicknessList.Count(); count++)
                                {
                                    <div class="divThicknessSizes" id="divThicknessSizes_@Model.ProductThicknessList[count].ProductThicknessID"></div>
                                }
                            }
                        </div>
                    </div>
                }
                <!-- #endregion [ Product Attribute Thickness Detail Section ] -->
            </div>
            <div id="loading-image" class="text-center hide">
                <img src="~/img/loader.gif" />
            </div>

            <div id="divSubmit" class="hide">
                <div class="form-group"><hr /></div>

                <!-- #region [ Submit & Cancel Button ]-->
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <a asp-action="Index" asp-route-id="@Model.ProductID" class="btn btn-secondary">Cancel</a>
                </div>
                <!-- #endregion [ Submit & Cancel Button ]-->
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script src="~/js/product/productattribute/details.js" asp-append-version="true"></script>
}