@model IEnumerable<BAL.ViewModels.Product.SupplierViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<p>
    <a asp-action="Create" asp-controller="Supplier" asp-area="Product"><customicon type="add" title="Create New Supplier"></customicon></a>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SupplierCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplierCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>                    
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/product/supplier/edit/@item.SupplierID"><customicon type="edit" title="Edit Supplier"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/product/supplier/details/@item.SupplierID"><customicon type="details" title="Show More Details"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/product/supplier/delete/@item.SupplierID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Supplier"></customicon></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a asp-action="Create">Create New Supplier</a>
        </div>
    </div>
}

@section scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
}