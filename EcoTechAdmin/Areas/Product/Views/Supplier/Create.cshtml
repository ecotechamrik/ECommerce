@model BAL.ViewModels.Product.SupplierViewModel

@{
    ViewData["Title"] = (Model != null && Model.SupplierID > 0) ? "Edit" : "Create";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <a asp-action="Index"><customicon type="back" title="Back to Suppliers"></customicon></a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="SupplierID" />
                <input type="hidden" asp-for="CreatedDateTime" />
                <input type="hidden" asp-for="UpdatedDateTime" />
                <label asp-for="SupplierName" class="control-label font-weight-bold"></label>
                <input asp-for="SupplierName" class="form-control" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierCode" class="control-label font-weight-bold"></label>
                <input asp-for="SupplierCode" class="form-control" />
                <span asp-validation-for="SupplierCode" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> <label asp-for="Active" class="control-label font-weight-bold"></label>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script src="~/js/product/supplier/create.js" asp-append-version="true"></script>
}