@model IEnumerable<BAL.ViewModels.Product.SectionViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Sections</h1>

<p>
    <a asp-action="Create"><customicon type="add" title="Create New Section"></customicon></a>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.SectionOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SectionName)
                </th>
                <th class="text-center">Categories</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.SectionOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SectionName)
                    </td>
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/category/index/@item.SectionID">Click Here</a>
                    </td>
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/section/edit/@item.SectionID"><customicon type="edit" title="Edit Section"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/section/details/@item.SectionID"><customicon type="details" title="Show More Details"></customicon></a> |
                        <a href="@BAL.Common.WEBSITEPATH/section/delete/@item.SectionID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Section"></customicon></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a asp-action="Create">Create New Section</a>
        </div>
    </div>
}

@section scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
}