@model BAL.ViewModels.Product.SectionViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Section Details</h1>

<div>
    <a asp-action="Index"><customicon type="back" title="Back to Sections"></customicon> </a> |
    <a href="@BAL.Common.WEBSITEPATH/section/edit/@Model.SectionID"><customicon type="edit" title="Edit Section"></customicon></a> |
    <a href="@BAL.Common.WEBSITEPATH/section/delete/@Model.SectionID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Section"></customicon></a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SectionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SectionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SectionOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SectionOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index"><customicon type="back" title="Back to Sections"></customicon> </a> |
    <a href="@BAL.Common.WEBSITEPATH/section/edit/@Model.SectionID"><customicon type="edit" title="Edit Section"></customicon></a> |
    <a href="@BAL.Common.WEBSITEPATH/section/delete/@Model.SectionID" onclick="return confirm('Do you want to delete this record?')"><customicon type="delete" title="Delete Section"></customicon></a>
</div>
