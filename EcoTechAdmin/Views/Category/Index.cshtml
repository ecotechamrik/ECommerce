@model IEnumerable<BAL.ViewModels.Product.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-controller="section" asp-action="Index"><img alt="Back to Sections" title="Back to Sections" src="~/img/back.png" border="0" style="border:none;" /></a>
    <a href="@BAL.Common.WEBSITEPATH/category/create/@ViewBag.SectionID"><img alt="Create New Category" title="Create New Category" src="~/img/create.png" border="0" style="border:none;" /></a>

    @if (ViewBag.SectionID != null)
    {
        @Html.ActionLink("Show All Categories", "Index", "Category", new { id = "" })
    }
</p>
<p>
    <select id="drpSections" class="form-control" asp-items="@(new SelectList(ViewBag.Sections, "SectionID","SectionName"))">
        <option value="">--Select--</option>
    </select>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.CategoryOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SectionName)
                </th>
                <th class="text-center">Sub Categories</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.CategoryOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SectionName)
                    </td>
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/subcategory/index/@item.CategoryID">Click Here</a>
                    </td>
                    <td class="text-center">
                        <a href="@BAL.Common.WEBSITEPATH/category/edit/@item.CategoryID"><img alt="Edit Category" title="Edit Category" src="~/img/edit.png" border="0" style="border:none;" /></a> |
                        <a href="@BAL.Common.WEBSITEPATH/category/details/@item.CategoryID"><img alt="Show Full Details" title="Show Full Details" src="~/img/details.png" border="0" style="border:none;" /></a> |
                        <a href="@BAL.Common.WEBSITEPATH/category/delete/@item.CategoryID" onclick="return confirm('Do you want to delete this record?')"><img alt="Delete Category" title="Delete Category" src="~/img/delete.jpeg" border="0" style="border:none;" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section scripts {
        <script src="~/js/jquery-3.5.1.js" asp-append-version="true"></script>

        <script type="text/javascript">

            $(document).ready(function () {
                $('#successMessage').delay(5000).fadeOut('slow');

                $('#drpSections').val("@ViewBag.SectionID")

                $('#drpSections').change(function () {
                    location.href = '/category/index/' + $("#drpSections :selected").val();
                });
            });
        </script>
    }
}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a asp-action="Create">Create New Category</a>
        </div>
    </div>
}

<div class="col-md-2">
    <a asp-controller="section" asp-action="Index"><img alt="Back to Sections" title="Back to Sections" src="~/img/back.png" border="0" style="border:none;" /></a>
    <a asp-action="Create"><img alt="Create New Category" title="Create New Category" src="~/img/create.png" border="0" style="border:none;" /></a>
</div>