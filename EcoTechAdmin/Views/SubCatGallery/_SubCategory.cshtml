@model IEnumerable<BAL.ViewModels.Product.SubCategoryViewModel>

<select id="SubCategoryID" class="form-control">
    <option selected value="">--Select--</option>

    @if (Model.Count() > 0)
    {
        var itemCount = 0;
        @foreach (var item in Model)
        {
            if (itemCount == 0)
            {
                <option value="@item.SubCategoryID">@item.SubCategoryName</option>
            }
            else
            {
                <option value="@item.SubCategoryID">@item.SubCategoryName</option>                
            }
            itemCount++;
        }
    }
</select>