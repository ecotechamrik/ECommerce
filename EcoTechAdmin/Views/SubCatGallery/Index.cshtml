@model IEnumerable<BAL.ViewModels.Product.SubCatGalleryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="@BAL.Common.GetSectionString("WebsiteURL", "")subcategory/index/@ViewBag.CategoryID"><img alt="Back to Sub Categories" title="Back to Sub Categories" src="~/img/back.png" border="0" style="border:none;" /></a> |
    <a href="@BAL.Common.GetSectionString("WebsiteURL", "")subcatgallery/create/@ViewBag.SubCategoryID/@ViewBag.CategoryID"><img alt="Create New Sub Cat Gallery" title="Create New Sub Cat Gallery" src="~/img/create.png" border="0" style="border:none;" /></a>
</p>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@ViewBag.Class">@ViewBag.Message</span>
    </div>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SubCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThumbNailSizeImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainImage)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubCategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThumbNailSizeImage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MainImage)
                    </td>
                    <td>
                        <a href="@BAL.Common.GetSectionString("WebsiteURL", "")subcatgallery/edit/@item.SubCatGalleryID"><img alt="Edit Sub Cat Gallery" title="Edit Sub Cat Gallery" src="~/img/edit.png" border="0" style="border:none;" /></a> |
                        <a href="@BAL.Common.GetSectionString("WebsiteURL", "")subcatgallery/details/@item.SubCatGalleryID"><img alt="Show Full Details" title="Show Full Details" src="~/img/details.png" border="0" style="border:none;" /></a> |
                        <a href="@BAL.Common.GetSectionString("WebsiteURL", "")subcatgallery/delete/@item.SubCatGalleryID" onclick="return confirm('Do you want to delete this record?')"><img alt="Delete Sub Cat Gallery" title="Delete Sub Cat Gallery" src="~/img/delete.jpeg" border="0" style="border:none;" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section scripts {
        <script src="~/js/jquery-3.5.1.js" asp-append-version="true"></script>

        <script type="text/javascript">

            $(document).ready(function () {
                $('#successMessage').delay(5000).fadeOut('slow');
            });
        </script>
    }
}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a href="@BAL.Common.GetSectionString("WebsiteURL", "")subcatgallery/create/@ViewBag.SubCategoryID/@ViewBag.CategoryID">Create New Sub Cat Gallery</a>
        </div>
    </div>
}