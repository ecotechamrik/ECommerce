@model IEnumerable<BAL.ViewModels.Product.SubCatGalleryViewModel>

@if ((TempData["Message"]) != null)
{
    <div id="successMessage" style="padding-bottom:15px;" class="text-danger">
        <span class="@TempData["Class"]">@TempData["Message"]</span>
    </div>
}
@if (Model.Count() > 0)
{
    <div class="font-weight-bold">Sub Category Gallery: </div>
    <div>@Model.FirstOrDefault().SubCategoryName<br/><br /></div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThumbNailSizeImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainImage)
                </th>
                <th>
                    Actions / Click here to <a href="javascript:void(0);" onclick="DeleteAllImages('@Model.FirstOrDefault().SubCategoryID');" id="delAllImages">Delete All</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order)
                    </td>
                    <td>
                        <img src="~/Gallery/@item.SubCategoryID/@item.ThumbNailSizeImage" title="Thumbnail Image" />
                    </td>
                    <td>
                        @if (item.IsMainImage == true)
                        {
                            <img title="Yes" alt="Yes" src="~/img/yes.png" />
                        }
                        else
                        {
                            <a id="lnkSetDefault" onclick="SetDefaultImage(@item.SubCatGalleryID, @item.SubCategoryID, @item.CategoryID);" href="javascript:void(0);">Set this as Main Image</a> <img title="Set this as Main Image" alt="Set this as Main Image" src="~/img/question.jpg" />
                        }

                    </td>
                    <td>
                        <a href="@BAL.Common.WEBSITEPATH/subcatgallery/delete/@item.SubCatGalleryID/@item.SubCategoryID/@item.CategoryID/@item.ThumbNailSizeImage" onclick="return confirm('Do you want to delete this record?')"><img alt="Delete Sub Cat Gallery" title="Delete Sub Cat Gallery" src="~/img/delete.jpeg" border="0" style="border:none;" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="text-center font-weight-bold m-5">
        <div class="form-control">No Records Found!</div>
        <div class="form-control">
            <a href="@BAL.Common.WEBSITEPATH/subcatgallery/create/@ViewBag.SubCategoryID/@ViewBag.CategoryID">Create New Sub Cat Gallery</a>
        </div>
    </div>
}