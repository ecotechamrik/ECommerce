<a class="navbar-brand" asp-area="" asp-controller="home" asp-action="Index"><img src="~/img/logo.png" alt="EcoTech Doors" /></a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark @Html.IsSelected(actions: "Index", controllers: "Home")" asp-area="" asp-controller="home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark @Html.IsSelected(actions: "Index,Details,Create,Edit", controllers: "Websites")" asp-area="" asp-controller="Websites" asp-action="Index">Websites</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark @Html.IsSelected(actions: "Index,Details,Create,Edit", controllers: "Section")" asp-area="" asp-controller="Section" asp-action="Index">Sections</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark @Html.IsSelected(actions: "Index,Details,Create,Edit", controllers: "Category")" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark @Html.IsSelected(actions: "Index,Details,Create,Edit,", controllers: "SubCategory,SubCatGallery")" asp-area="" asp-controller="SubCategory" asp-action="Index">Sub Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark @Html.IsSelected(actions: "Index", controllers: "Products")" asp-area="" asp-controller="product" asp-action="Index">Products</a>
        </li>
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link text-dark @Html.IsSelected(actions: "Logout", controllers: "Home")" asp-area="" asp-controller="home" asp-action="logout">Logout</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" onclick="javascript: void (0);">--</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" onclick="javascript: void (0);"><b>Welcome: @User.Claims.First().Value</b></a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link float-right text-dark @Html.IsSelected(actions: "Login", controllers: "Home")" asp-area="" asp-controller="home" asp-action="login">Login</a>
            </li>
        }
    </ul>
</div>